@model WestcoastEducation.Web.ViewModels.Classrooms.ClassroomPostViewModel

@{
    Layout = "_LayoutAdmin";
    var startDate = DateTime.Today.ToString("yyyy-MM-dd");
    var endDate = DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd");
}

<section class="page">
    <h1 class="page-title">LÃ¤gg till kurs</h1>

    <form class="shadow" asp-action="create" asp-controller="ClassroomAdmin" method="post">

        <div class="form-control">
            <label asp-for="Number"></label>
            <input asp-for="Number" />
            <span class="error" asp-validation-for="Number"></span>
        </div>
        <div class="form-control">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span class="error" asp-validation-for="Name"></span>
        </div>
        <div class="form-control">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span class="error" asp-validation-for="Title"></span>
        </div>
        <div class="form-control">
            <label asp-for="Content"></label>
            <input asp-for="Content" />
            <span class="error" asp-validation-for="Content"></span>
        </div>
        <div class="form-control">
            <label asp-for="Start"></label>
            <input asp-for="Start" type="date" value="@startDate" />
            <span class="error" asp-validation-for="Start"></span>
        </div>
        <div class="form-control">
            <label asp-for="End"></label>
            <input asp-for="End" type="date" value="@endDate" />
            <span class="error" asp-validation-for="End"></span>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-submit">
                    <i class="fa-sharp fa-solid fa-floppy-disk"></i>
                    Spara
                </button>
                <a asp-action="Index" asp-controller="ClassroomAdmin" class="btn-cancel">
                    <i class="fa-solid fa-arrow-left"></i>
                    Avbryt
                </a>
            </div>
        </div>

    </form>
</section>