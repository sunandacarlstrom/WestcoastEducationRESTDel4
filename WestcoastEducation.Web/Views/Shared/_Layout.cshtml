<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/507df99975.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    @RenderSection("styles", false)
    <link rel="stylesheet" href="~/css/styles.css">
    <title>@ViewBag.PageTitle Westcoast Education</title>
</head>

<body>
    <header>
        <nav class="navbar">
            <h1 class="logo">
                <a asp-action="Index" asp-controller="Home">
                    <span class="logo-text">
                        <i class="fa-solid fa-graduation-cap"></i>
                    </span>
                    Westcoast Education
                </a>
            </h1>
            <ul>
                <li><a asp-action="Index" asp-controller="Home">Start</a></li>
                <li><a asp-action="Index" asp-controller="Classroom">Utbildningar</a></li>
                @* Gör kontroll med razor-syntax...*@
                @* om användaren är inloggad, då körs else-blocket. *@
                @if (User.Identity is null || User.Identity.IsAuthenticated == false)
                {
                    <li><a asp-action="login" asp-controller="Account" class="btn-outline">Logga In</a></li>
                }
                else
                {
                    <li><a asp-action="logout" asp-controller="Account" class="btn-outline">Logga Ut</a></li>
                }
                @* <li><a asp-action="Index" asp-controller="Admin"><i class="fa-solid fa-gears"></i></a></li> *@
            </ul>
        </nav>
    </header>
    <main>
        <section class="offer-container">
            @await Html.PartialAsync("_OnDemandOffer")
        </section>
        @RenderBody()
    </main>
</body>

</html>